{
	"name": "topic-list",
	"displayName": "topic_list",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.29.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:python123.signIn",
		"onCommand:python123.signOut",
		"onCommand:python123.refresh",
		"onCommand:python123.upload",
		"onCommand:python123.uploadImg",
		"onCommand:python123.newFolderInColumn",
		"onCommand:python123.newFolderInTopic",
		"onCommand:python123.deleteNode",
		"onView:topic"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "python123.signIn",
				"title": "登录"
			},
			{
				"command": "python123.signOut",
				"title": "退出登录 "
			},
			{
				"command": "python123.refresh",
				"title": "刷新",
				"icon": "media/refresh.svg"
			},
			{
				"command": "python123.upload",
				"title": "上传",
				"icon": "media/upload.svg"
			},
			{
				"command": "python123.uploadImg",
				"title": "上传图片"
			},
			{
				"command": "python123.newFolderInColumn",
				"title": "新建专栏",
				"icon": "media/addFolder.svg"
			},
			{
				"command": "python123.newFolderInTopic",
				"title": "新建目录",
				"icon": "media/addFolder.svg"
			},
			{
				"command": "python123.deleteNode",
				"title": "删除当前项",
				"icon": "media/delete.svg"
			},
			{
				"command": "python123.editFolder",
				"title": "编辑节点名称",
				"icon": "media/edit.svg"
			},
			{
				"command": "python123.editArticle",
				"title": "编辑文章",
				"icon": "media/edit.svg"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "python123.refresh",
					"when": "view == topic",
					"group": "navigation"
				},
				{
					"command": "python123.signOut",
					"when": "view == topic"
				}
			],
			"view/item/context": [
				{
					"command": "python123.newFolderInTopic",
					"when": "view == topic && viewItem == folder",
					"group": "inline"
				},
				{
					"command": "python123.newFolderInTopic",
					"when": "view == topic && viewItem == topic",
					"group": "inline"
				},
				{
					"command": "python123.upload",
					"when": "view == topic && viewItem == folder",
					"group": "inline"
				},
				{
					"command": "python123.upload",
					"when": "view == topic && viewItem == topic",
					"group": "inline"
				},
				{
					"command": "python123.deleteNode",
					"when": "view == topic && viewItem == folder ",
					"group": "inline"
				},
				{
					"command": "python123.deleteNode",
					"when": "view == topic && viewItem == topic ",
					"group": "inline"
				},
				{
					"command": "python123.deleteNode",
					"when": "view == topic && viewItem == article ",
					"group": "inline"
				},
				{
					"command": "python123.newFolderInColumn",
					"when": "view == topic && viewItem == root ",
					"group": "inline"
				},
				{
					"command": "python123.editFolder",
					"when": "view == topic && viewItem == folder ",
					"group": "inline"
				},
				{
					"command": "python123.editArticle",
					"when": "view == topic && viewItem == article ",
					"group": "inline"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "python123",
					"title": "Python 123",
					"icon": "media/list-ul-solid.svg"
				}
			]
		},
		"views": {
			"python123": [
				{
					"id": "topic",
					"name": "专栏"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"@types/jwt-decode": "^2.2.1",
		"@types/lodash": "^4.14.122",
		"jwt-decode": "^2.2.0",
		"lodash": "^4.17.11"
	}
}